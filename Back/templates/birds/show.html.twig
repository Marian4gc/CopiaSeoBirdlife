{% extends 'base.html.twig' %}

{% block title %}Birds{% endblock %}

{% block body %}
    <<div class="title-image-container1">
        <img src="{{ asset('images/petirojoIzq.png') }}" alt="Birds Image">
        <h1>Birds index</h1>
    </div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bird.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bird.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bird.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ bird.image }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ bird.link }}</td>
            </tr>
            <tr>
                <th>Song</th>
                <td>{{ bird.song }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-info" href="{{ path('app_birds_index') }}">Volver a la lista</a>

    <a type="button" class="btn btn-dark" href="{{ path('app_birds_edit', {'id': bird.id}) }}">Editar</a>

    {{ include('birds/_delete_form.html.twig') }}
{% endblock %}
