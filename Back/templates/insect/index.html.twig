{% extends 'base.html.twig' %}

{% block title %}Insect index{% endblock %}

{% block body %}
    <h1>Insect index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for insect in insects %}
            <tr>
                <td>{{ insect.id }}</td>
                <td>{{ insect.name }}</td>
                <td>{{ insect.description }}</td>
                <td>{{ insect.image }}</td>
                <td>
                    <a href="{{ path('app_insect_show', {'id': insect.id}) }}">show</a>
                    <a href="{{ path('app_insect_edit', {'id': insect.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_insect_new') }}">Create new</a>
{% endblock %}
