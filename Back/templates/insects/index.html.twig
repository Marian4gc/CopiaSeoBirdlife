{% extends 'base.html.twig' %}

{% block title %}Insects index{% endblock %}

{% block body %}
    <h1>Insects index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for insect in insects %}
            <tr>
                <td>{{ insect.id }}</td>
                <td>{{ insect.name }}</td>
                <td>{{ insect.description }}</td>
                <td>
                    <a href="{{ path('app_insects_show', {'id': insect.id}) }}">show</a>
                    <a href="{{ path('app_insects_edit', {'id': insect.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_insects_new') }}">Create new</a>
{% endblock %}
