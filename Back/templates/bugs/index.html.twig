{% extends 'base.html.twig' %}

{% block title %}Bugs index{% endblock %}

{% block body %}
    <h1>Bugs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bug in bugs %}
            <tr>
                <td>{{ bug.id }}</td>
                <td>{{ bug.name }}</td>
                <td>{{ bug.description }}</td>
                <td>{{ bug.image }}</td>
                <td>
                    <a href="{{ path('app_bugs_show', {'id': bug.id}) }}">show</a>
                    <a href="{{ path('app_bugs_edit', {'id': bug.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bugs_new') }}">Create new</a>
{% endblock %}
