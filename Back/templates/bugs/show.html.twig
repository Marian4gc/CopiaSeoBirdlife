{% extends 'base.html.twig' %}

{% block title %}Bugs{% endblock %}

{% block body %}
    <h1>Bugs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bug.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bug.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bug.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ bug.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bugs_index') }}">back to list</a>

    <a href="{{ path('app_bugs_edit', {'id': bug.id}) }}">edit</a>

    {{ include('bugs/_delete_form.html.twig') }}
{% endblock %}
