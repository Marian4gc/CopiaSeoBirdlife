{% extends 'base.html.twig' %}

{% block title %}Plant{% endblock %}

{% block body %}
   
    <div class="title-image-container3">
    <img src="{{ asset('images/plant.svg') }}" alt="plant Image">
    <h1>Plantas</h1>
</div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plant.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plant.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ plant.image }}</td>
            </tr>
        </tbody>
    </table>

    <a  type="button" class="btn btn-info" href="{{ path('app_plant_index') }}">Volver a la lista</a>

    <a type="button" class="btn btn-dark"  href="{{ path('app_plant_edit', {'id': plant.id}) }}">Editar</a>

    {{ include('plant/_delete_form.html.twig') }}
{% endblock %}
