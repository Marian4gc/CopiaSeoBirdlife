{% extends 'base.html.twig' %}

{% block title %}Plants index{% endblock %}

{% block body %}
    <h1>Plants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plant in plants %}
            <tr>
                <td>{{ plant.id }}</td>
                <td>{{ plant.name }}</td>
                <td>{{ plant.description }}</td>
                <td>
                    <a href="{{ path('app_plants_show', {'id': plant.id}) }}">show</a>
                    <a href="{{ path('app_plants_edit', {'id': plant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plants_new') }}">Create new</a>
{% endblock %}
